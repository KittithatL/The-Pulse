# ==============================================
# THE PULSE - ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=5000

# Client URL for CORS (frontend URL)
CLIENT_URL=http://localhost:5173

# ==============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=the_pulse_db
DB_USER=postgres
DB_PASSWORD=pickza557
DATABASE_URL="postgresql://postgres:pickza557@localhost:5432/the_pulse_db?schema=public"

# Database pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# Generate a secure random string for JWT_SECRET
# Example: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_here_please_change_this
JWT_EXPIRES_IN=7d

# ==============================================
# API RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=debug
LOG_FORMAT=dev

# ==============================================
# EXTERNAL SERVICES (Optional)
# ==============================================

# Email Service (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# EMAIL_FROM=noreply@thepulse.app

# File Upload (AWS S3 or similar)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=thepulse-uploads

# Redis (for caching and sessions)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# WebSocket Server
# WS_PORT=5001

# ==============================================
# SECURITY
# ==============================================

# CORS origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Cookie settings
COOKIE_SECRET=your_cookie_secret_here
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_SWAGGER_DOCS=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_STACK_TRACE=true

# ==============================================
# MONITORING & ANALYTICS
# ==============================================
# Sentry (error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# Google Analytics
# GA_TRACKING_ID=UA-XXXXX-Y

# ==============================================
# AI / ML SERVICES (Future features)
# ==============================================
# OpenAI API for advanced AI features
# OPENAI_API_KEY=your_openai_key_here

# ==============================================
# NOTIFICATION SERVICES
# ==============================================
# Slack Integration
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# SLACK_BOT_TOKEN=xoxb-your-token

# Discord Webhook
# DISCORD_WEBHOOK_URL=your_discord_webhook

# ==============================================
# CRON JOBS
# ==============================================
# Enable automated risk detection
ENABLE_AUTO_RISK_DETECTION=true
RISK_DETECTION_INTERVAL=3600000

# Enable automated reports
ENABLE_AUTO_REPORTS=true
REPORT_GENERATION_CRON=0 9 * * 1

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
# Enable hot reload
ENABLE_HOT_RELOAD=true

# Debug mode
DEBUG=true

# API documentation endpoint
SWAGGER_PATH=/api-docs

# ==============================================
# PRODUCTION OVERRIDES
# ==============================================
# In production, override these values:
# NODE_ENV=production
# DEBUG=false
# ENABLE_ERROR_STACK_TRACE=false
# COOKIE_SECURE=true
# CLIENT_URL=https://yourdomain.com

# ==============================================
# NOTES
# ==============================================
# 1. Never commit .env to version control
# 2. Keep .env.example for team reference
# 3. Use strong passwords and secrets
# 4. Rotate secrets regularly
# 5. Different .env for dev/staging/production
